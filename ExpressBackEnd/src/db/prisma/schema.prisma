datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model SpotifyUser {
  id String @id @db.Uuid
  email String @unique
  firstName String
  lastName String
  passwordHash String @db.VarChar(256)
}

model Artist {
  id Int @id @default(autoincrement())
  name String
  albums Album[]
  musicSongs MusicSong[]
}

model Album {
  id Int @id @default(autoincrement())
  name String
  releaseYear Int
  artist Artist @relation(fields: [artistId], references: [id])
  artistId Int
  musicSongs MusicSong[]
}

model MusicSong {
  id Int @id @default(autoincrement())
  filPath String
  duration Int
  releaseYear Int
  artist Artist @relation(fields: [artistId], references: [id])
  artistId Int
  album Album? @relation(fields: [albumId], references: [id])
  albumId Int
}